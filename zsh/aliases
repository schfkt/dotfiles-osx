# disable some shit from oh-my-zsh
unalias ll
unalias grhh

# git
alias gcom='git commit -m'
alias gh='git log --graph --pretty=format:"%Cred%h%Creset %Cgreen(%ci) %C(bold blue)<%an>%Creset -%C(yellow)%d%Creset %s " --abbrev-commit'
alias ghh='gh | head'
alias gsh='git stash'
alias gpo='git push origin'
alias gau='git add -u'
alias gaa='git add -A'
alias gdl='git diff HEAD~1..HEAD'
alias gdc='git diff --cached'
alias gpuoh='git push -u origin HEAD'
alias gap='git add -p'
alias gc='git commit -v'
alias t='tig'

# misc
alias pd="cd -"
alias plf='pgrep -lf'
alias vg='vagrant'
alias ll='ls -lh'
alias gs='false'
alias tailf='tail -f'
alias vim='vimx'
alias v='vim'
alias gtypist='LANG=C gtypist'
alias ports='netstat -tulanp'

# tmux
alias tls='tmux ls'
alias ta='tmux attach-session -t'
alias tn='tmux new-session -s'
alias tk='tmux kill-session -t'
alias tms='tmuxinator start'

# ruby
alias b='bundle'
alias be='bundle exec'
alias rc='be rails c'
alias rg='be rails g'
alias rs='be rails s'
alias rr='be rake routes'
alias rrg='rr | grep'

# js
alias cw='coffee -cbw --output . coffee'
alias npm-exec='PATH=$(npm bin):$PATH'
alias nr='npm run'
alias ne='npm-exec'

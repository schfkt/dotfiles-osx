# disable some shit from oh-my-zsh
unalias ll
unalias grhh

# git
alias gcom='git commit -m'
alias gh='git log --graph --pretty=format:"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset" --abbrev-commit'
alias ghh='gh | head'
alias gsh='git stash'
alias gpo='git push origin'
alias gau='git add -u'
alias gaa='git add -A'
alias gx='gitx --all'

# misc
alias pd="cd -"
alias plf='pgrep -lf'
alias vg='vagrant'
alias ll='ls -lh'
alias gs='false' # fuck it
alias tailf='tail -f'

# tmux
alias tls='tmux ls'
alias ta='tmux attach-session -t'
alias tn='tmux new-session -s'
alias tk='tmux kill-session -t'

# ruby/rails and friends
alias b='bundle'
alias be='bundle exec'
alias r='be rails'
alias rc='be rails c'
alias rg='be rails g'
alias rr='be rake routes'
alias cw='coffee -cbw --output . coffee'
alias cuke='cucumber -f html -b'
